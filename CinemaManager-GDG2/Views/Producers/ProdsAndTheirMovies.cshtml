@model IEnumerable<CinemaManager_GDG2.Models.Cinema.Producer>

@{
    ViewData["Title"] = "ProdsAndTheirMovies";
}

<h1>ProdsAndTheirMovies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th>
                Movie Title
            </th>
            <th>
                Movie Genre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                    @foreach(var m in item.Movies)
                    {
                        @Html.DisplayFor(modelItem => m.Title) <br />
                    }
            </td>
            <td>
                    @foreach(var m in item.Movies)
                    {
                        @Html.DisplayFor(modelItem => m.Genre) <br />
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
